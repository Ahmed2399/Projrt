{% extends 'base.html.twig' %}

{% block title %}Exercice index
{% endblock %}

{% block body %}
	<section>
		<div class="container">
			<div class="row">

				<div class="col-lg-12 col-12 text-center">


					<h2 class="text-white" data-aos="fade-up" data-aos-delay="200">Programme Musculation</h2>
				</div>

				<div class="col-lg-12 py-5 col-md-12 col-12">
					<h1>Exercice index</h1>

					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>Description</th>
								<th>Repetition</th>
								<th>Time</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for exercice in exercices %}
								<tr>
									<td>{{ exercice.id }}</td>
									<td>{{ exercice.nom }}</td>
									<td>{{ exercice.description }}</td>
									<td>{{ exercice.repetition }}</td>
									<td>{{ exercice.time ? exercice.time|date('H:i:s') : '' }}</td>
									<td>
										<a href="{{ path('exercice_show', {'id': exercice.id}) }}">show</a>
										<a href="{{ path('exercice_edit', {'id': exercice.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<a href="{{ path('exercice_new') }}">Create new</a>
				</div>

			</div>
		</div>
	</section>
{% endblock %}
