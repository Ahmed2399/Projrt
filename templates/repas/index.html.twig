{% extends 'base-back.html.twig' %}

{% block title %}Repas index
{% endblock %}

{% block body %}
	<h1>Repas index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Ingrediant1</th>
				<th>NbCaloris</th>
				<th>Glucides</th>
				<th>Legumes</th>
				<th>QuantProt</th>
				<th>QuantLegu</th>
				<th>QuantGluc</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for repa in repas %}
				<tr>
					<td>{{ repa.id }}</td>
					<td>{{ repa.nom }}</td>
					<td>{{ repa.description }}</td>
					<td>{{ repa.ingrediant1 }}</td>
					<td>{{ repa.nbCaloris }}</td>
					<td>{{ repa.glucides }}</td>
					<td>{{ repa.legumes }}</td>
					<td>{{ repa.quantProt }}</td>
					<td>{{ repa.quantLegu }}</td>
					<td>{{ repa.quantGluc }}</td>
					<td>
						<a href="{{ path('repas_show', {'id': repa.id}) }}">show</a>
						<a href="{{ path('repas_edit', {'id': repa.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('repas_new') }}">Create new</a>
{% endblock %}
