{% extends 'base.html.twig' %}

{% block title %}Espace index
{% endblock %}

{% block body %}
	<section class="about section" id="about">
		<div class="container">
			<div class="row">

				<div class="mt-lg-5 mb-lg-0 mb-4 col-lg-5 col-md-10 mx-auto col-12">
					<h1>Espace index</h1>

					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Date</th>
								<th>Status</th>
								<th>Duree</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for espace in espaces %}
								<tr>
									<td>{{ espace.id }}</td>
									<td>{{ espace.date ? espace.date|date('Y-m-d') : '' }}</td>
									<td>{{ espace.status ? 'Yes' : 'No' }}</td>
									<td>{{ espace.duree }}</td>
									<td>
										<a href="{{ path('espace_show', {'id': espace.id}) }}">show</a>
										<a href="{{ path('espace_edit', {'id': espace.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<a href="{{ path('espace_new') }}">Create new</a>

				</div>

			</div>
		</div>
	</section>
{% endblock %}
